{
  "extends": "@tooling/typescript/nextjs.json",
  "compilerOptions": {
    "jsxImportSource": "react",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/assets/*": ["./public/*"],
      "@/*": ["./src/*"],
      "@repo/design/*": ["../../packages/design-system/*"],
      "@repo/*": ["../../packages/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts",
    "../packages/design-system/src/types/**/*.d.ts",
    "../packages/design-system/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.native.tsx",
    "**/*.native.ts",
    "**/tooling/jest/**",
    "**/jest/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**"
  ]
}
