{
  "extends": "@tooling/typescript/nextjs.json",
  "compilerOptions": {
    "jsxImportSource": "react",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/assets/*": [
        "./public/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@repo/design/*": [
        "../../packages/design-system/*"
      ],
      "@repo/*": [
        "../../packages/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
