{
  "extends": "@tooling/typescript/react-library.json",
  "compilerOptions": {
    "types": ["nativewind/types"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@repo/design/*": ["./*"],
      "@repo/*": ["../*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
