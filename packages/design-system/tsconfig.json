{
  "extends": "@tooling/typescript/react-library.json",
  "compilerOptions": {
    "types": ["nativewind/types"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@repo/design/*": ["./*"],
      "@repo/*": ["../*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src", "src/types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.native.ts", "**/*.web.ts"]
}
