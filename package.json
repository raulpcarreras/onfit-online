{
  "name": "pho-monorepo",
  "version": "0.2.18",
  "pho": "0.2.18",
  "bin": {
    "pho-monorepo": "scripts/init.mjs"
  },
  "files": [
    "scripts/init.mjs",
    "CHANGELOG.md"
  ],
  "packageManager": "pnpm@10.12.4",
  "workspaces": [],
  "scripts": {
    "dev:web": "NODE_OPTIONS=--no-deprecation pnpm --filter web dev",
    "web:dev": "pnpm run dev:web",
    "web:build": "pnpm --filter web build",
    "dev:native": "NODE_OPTIONS=--no-deprecation pnpm --filter native exec expo start -c",
    "native:start": "pnpm run dev:native",
    "native:start:client": "pnpm --filter native exec npx expo start --dev-client",
    "native:start:go": "pnpm --filter native exec npx expo start --go",
    "native:run:ios": "pnpm --filter native exec npx expo run:ios",
    "native:run:android": "pnpm --filter native exec npx expo run:android",
    "native:prebuild:clean": "pnpm --filter native exec npx expo prebuild --clean",
    "native:doctor": "pnpm --filter native exec npx expo-doctor",
    "native:fix": "pnpm --filter native exec npx expo install --fix",
    "native:setup:devclient": "pnpm --filter native exec npx expo install expo-dev-client",
    "build": "node scripts/run.mjs build",
    "dev": "node scripts/run.mjs dev",
    "test": "node scripts/run.mjs test",
    "deps": "node scripts/deps.mjs",
    "patch": "pnpm dlx pnpm-patch-i",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "watchman": "watchman watch-del './' ; watchman watch-project './'",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "dependencies": {
    "@inquirer/select": "^4.2.3",
    "chalk": "^5.4.1",
    "clsx": "2.1.1",
    "commander": "^14.0.0",
    "expo": "~53.0.20",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "sharp": "^0.34.3",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": ">=20"
  },
  "i18n-config": {
    "paths": [
      "./apps/web",
      "./apps/native"
    ],
    "include": [
      "./packages/design-system/components"
    ]
  }
}
