{
  "name": "pho-monorepo",
  "version": "0.2.18",
  "pho": "0.2.18",
  "bin": {
    "pho-monorepo": "scripts/init.mjs"
  },
  "files": [
    "scripts/init.mjs",
    "CHANGELOG.md"
  ],
  "packageManager": "pnpm@10.12.4",
  "workspaces": [],
  "scripts": {
    "web:dev": "NODE_OPTIONS=--no-deprecation pnpm --filter web dev",
    "web:build": "pnpm --filter web build",
    "native:start": "NODE_OPTIONS=--no-deprecation pnpm --filter native exec expo start -c",
    "native:start:client": "pnpm --filter native exec npx expo start --dev-client",
    "native:start:go": "pnpm --filter native exec npx expo start --go",
    "native:run:ios": "pnpm --filter native exec npx expo run:ios",
    "native:run:android": "pnpm --filter native exec npx expo run:android",
    "native:prebuild:clean": "pnpm --filter native exec npx expo prebuild --clean",
    "native:doctor": "pnpm --filter native exec npx expo-doctor",
    "native:fix": "pnpm --filter native exec npx expo install --fix",
    "native:setup:devclient": "pnpm --filter native exec npx expo install expo-dev-client",
    "build": "node scripts/run.mjs build",
    "dev": "node scripts/run.mjs dev",
    "test": "node scripts/run.mjs test",
    "test:design": "pnpm --filter @repo/design test",
    "test:design:watch": "pnpm --filter @repo/design test:watch",
    "test:design:coverage": "pnpm --filter @repo/design test:coverage",
    "deps": "node scripts/deps.mjs",
    "patch": "pnpm dlx pnpm-patch-i",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "watchman": "watchman watch-del './' ; watchman watch-project './'",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "dependencies": {
    "@inquirer/select": "^4.2.3",
    "chalk": "^5.4.1",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/react-native": "13.2.0",
    "@testing-library/user-event": "^14.6.1",
    "jest-environment-jsdom": "^30.1.2",
    "jest-environment-node": "^30.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4"
  },
  "engines": {
    "node": ">=20"
  },
  "i18n-config": {
    "paths": [
      "./apps/web",
      "./apps/native"
    ],
    "include": [
      "./packages/design-system/components",
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "src/types/**/*.d.ts"
    ]
  },
  "pnpm": {
    "overrides": {
      "form-data": "4.0.4",
      "@types/node-fetch>form-data": "4.0.4",
      "esbuild": "0.25.6",
      "@eslint/plugin-kit": "0.3.4",
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "scheduler": "^0.25.0",
      "@expo/config-plugins": "~10.1.1",
      "@expo/prebuild-config": "~9.0.0",
      "@expo/metro-config": "~0.20.0"
    }
  }
}
